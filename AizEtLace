<body>
    <header>
        <h1 class="app-name">Aiz&Lace</h1>
        <p>Katalog Hadiah, Buket, dan Barang Aesthetic</p>
    </header>

    <div class="description">
        <p>Selamat datang di Aiz&Lace! Temukan koleksi hadiah, buket, dan barang aesthetic, coquete, serta vintage yang cantik dan unik. Log in untuk menambah produk ke katalog.</p>
    </div>

    <div class="categories">
        <button class="category-btn" onclick="filterCategory('aesthetic')">Aesthetic</button>
        <button class="category-btn" onclick="filterCategory('vintage')">Vintage</button>
        <button class="category-btn" onclick="filterCategory('coquete')">Coquete</button>
    </div>

    <div class="catalog" id="catalog"></div>

    <div class="cart" onclick="showCart()">Keranjang (0)</div>

    <div class="auth" onclick="showAuthModal()">Log In / Sign Up</div>

    <div class="add-product" id="addProductBtn" onclick="showAddProductModal()">Tambah Produk</div>

    <!-- Modal for Auth -->
    <div id="authModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Log In</h2>
            <form id="loginForm">
                <input type="email" id="loginEmail" placeholder="Email" required>
                <input type="password" id="loginPassword" placeholder="Password" required>
                <button type="submit">Log In</button>
            </form>
            <p>Belum punya akun? <button onclick="showSignUp()">Sign Up</button></p>
            <div id="signUpForm" style="display: none;">
                <h3>Sign Up</h3>
                <input type="email" id="signUpEmail" placeholder="Email" required>
                <input type="password" id="signUpPassword" placeholder="Password" required>
                <button onclick="signUp()">Sign Up</button>
            </div>
        </div>
    </div>

    <!-- Modal for Add Product -->
    <div id="addProductModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Tambah Produk</h2>
            <form id="addProductForm">
                <input type="text" id="productName" placeholder="Nama Barang" required>
                <input type="number" id="productPrice" placeholder="Harga" required>
                <textarea id="productDesc" placeholder="Deskripsi" required></textarea>
                <select id="productCategory" required>
                    <option value="aesthetic">Aesthetic</option>
                    <option value="vintage">Vintage</option>
                    <option value="coquete">Coquete</option>
                </select>
                <input type="file" id="productImage" accept="image/*" required>
                <button type="submit">Tambah Produk</button>
            </form>
        </div>
    </div>

    <!-- Modal for Cart -->
    <div id="cartModal" class="modal">
        <div class="modal-content">
            <span class="close" onclick="closeModal()">&times;</span>
            <h2>Keranjang</h2>
            <div id="cartItems"></div>
            <button class="checkout" onclick="checkout()">Check Out via WA</button>
        </div>
    </div>

    <script>
        // Firebase Config - GANTI DENGAN YANG DARI PROYEK KAMU
        const firebaseConfig = {
            apiKey: "YOUR_API_KEY",
            authDomain: "YOUR_PROJECT_ID.firebaseapp.com",
            projectId: "YOUR_PROJECT_ID",
            storageBucket: "YOUR_PROJECT_ID.appspot.com",
            messagingSenderId: "YOUR_MESSAGING_SENDER_ID",
            appId: "YOUR_APP_ID"
        };

        // Initialize Firebase
        firebase.initializeApp(firebaseConfig);
        const auth = firebase.auth();
        const db = firebase.firestore();
        const storage = firebase.storage();

        let products = [];
        let cart = [];
        let user = null;

        // Auth State Listener
        auth.onAuthStateChanged((currentUser) => {
            user = currentUser;
            if (user) {
                document.querySelector('.auth').textContent = 'Log Out';
                document.querySelector('.auth').onclick = logOut;
                document.getElementById('addProductBtn').style.display = 'block';
            } else {
                document.querySelector('.auth').textContent = 'Log In / Sign Up';
                document.querySelector('.auth').onclick = showAuthModal;
                document.getElementById('addProductBtn').style.display = 'none';
            }
            loadProducts();
        });

        // Load products from Firestore
        async function loadProducts() {
            const snapshot = await db.collection('products').get();
            products = snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() }));
            renderCatalog();
        }

        function renderCatalog(category = 'all') {
            const catalog = document.getElementById('catalog');
            catalog.innerHTML = '';
            products.forEach(product => {
                if (category === 'all' || product.category === category) {
                    const productDiv = document.createElement('div');
                    productDiv.className = 'product';
                    productDiv.innerHTML = `
                        <img src="${product.imageUrl}" alt="${product.name}">
                        <h3>${product.name}</h3>
                        <p>Rp ${product.price}</p>
                        <p>${product.desc}</p>
                        <button class="add-to-cart" onclick="addToCart('${product.name}', ${product.price})">Tambah ke Keranjang</button>
                    `;
                    catalog.appendChild(productDiv);
                }
            });
        }

        function filterCategory(category) {
            renderCatalog(category);
        }

        function addToCart(name, price) {
            cart.push({ name, price });
            updateCartCount();
        }

        function updateCartCount() {
            document.querySelector('.cart').textContent = `Keranjang (${cart.length})`;
        }

        function showCart() {
            const cartItems = document.getElementById('cartItems');
            cartItems.innerHTML = '';
            cart.forEach(item => {
                cartItems.innerHTML += `<p>${item.name} - Rp ${item.price}</p>`;
            });
            document.getElementById('cartModal').style.display = 'block';
        }

        function checkout() {
            const message = cart.map(item => `${item.name} - Rp ${item.price}`).join('\n');
            const waUrl = `https://wa.me/6287862438374?text=Pesanan:%0A${encodeURIComponent(message)}`;
            window.open(waUrl, '_blank');
        }

        function showAuthModal() {
            document.getElementById('authModal').style.display = 'block';
        }

        function showSignUp() {
            document.getElementById('signUpForm').style.display = 'block';
        }

        function signUp() {
            const email = document.getElementById('signUpEmail').value;
            const password = document.getElementById('signUpPassword').value;
            auth.createUserWithEmailAndPassword(email, password)
                .then(() => {
                    alert('Sign up berhasil! Silakan log in.');
                    document.getElementById('signUpForm').style.display = 'none';
                })
                .catch(error => alert(error.message));
        }

        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;
            auth.signInWithEmailAndPassword(email, password)
                .catch(error => alert(error.message));
        });

        function logOut() {
            auth.signOut();
        }

        function showAddProductModal() {
            if (user) {
                document.getElementById('addProductModal').style.display = 'block';
            }
        }

        function closeModal() {
            document.getElementById('authModal').style.display = 'none';
            document.getElementById('addProductModal').style.display = 'none';
            document.getElementById('cartModal').style.display = 'none';
        }

        document.getElementById('addProductForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            if (!user) return;
            const name = document.getElementById('productName').value;
            const price = document.getElementById('productPrice').value;
            const desc = document.getElementById('productDesc').value;
            const category = document.getElementById('productCategory').value;
            const imageFile = document.getElementById('productImage').files[0];

            if (imageFile) {
                const storageRef = storage.ref(`products/${Date.now()}_${imageFile.name}`);
                const uploadTask = await storageRef.put(imageFile);
                const imageUrl = await uploadTask.ref.getDownloadURL();

                await db.collection('products').add({
                    name,
                    price: parseInt(price),
                    desc,
                    category,
                    imageUrl
                });

                await loadProducts();
                document.getElementById('addProductModal').style.display = 'none';
                alert("Produk berhasil ditambahkan!");
            }
        });

        loadProducts();
    </script>
</body>
</html>
